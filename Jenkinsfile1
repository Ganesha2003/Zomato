pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
    }
    
    stages {
        
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/Ganesha2003/Zomato.git'          
            }
        }
        
        stage ("Build Docker Image") {
            steps {
                sh "docker build -t rmganesha/zomatoapp:1.0 ."               
            }
        }
        stage ("Tag & Push to DockerHub") {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-login', passwordVariable: 'dockerhubpass', usernameVariable: 'dockerhublogin')]) {
                        sh 'docker login -u ${dockerhublogin} -p ${dockerhubpass}'
                        sh "docker push rmganesha/zomatoapp:1.0 "
                    }
                }
            }
        }
        stage('Terraform Apply') {
            steps {
                // Inject PEM file securely from Jenkins credentials
                withCredentials([file(credentialsId: 'bookmyshow-pem', variable: 'PEMFILE')]) {
                    sh '''
                        # Secure the PEM file
                        chmod 600 $PEMFILE

                        # Initialize and apply Terraform, passing PEM file path
                        cd terraformfiles
                        terraform init
                        terraform apply -auto-approve -var pem_file=$PEMFILE
                    '''
                }
            }
        }
    }
}
