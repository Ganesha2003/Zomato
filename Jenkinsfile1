pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
    }

    stages {

        stage ("Git Checkout") {
            steps {
                git 'https://github.com/Ganesha2003/Zomato.git'
            }
        }

        stage ("Build Docker Image") {
            steps {
                sh "docker build -t rmganesha/zomatoapp:1.0 ."
            }
        }

        stage ("Tag & Push to DockerHub") {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-login', passwordVariable: 'dockerhubpass', usernameVariable: 'dockerhublogin')]) {
                        sh 'docker login -u ${dockerhublogin} -p ${dockerhubpass}'
                        sh "docker push rmganesha/zomatoapp:1.0 "
                    }
                }
            }
        }

        stage('Config & Deployment') {
            steps {
                // This block securely injects the AWS keys and the SSH key file.
                withCredentials([
                    aws(accessKeyVariable: 'AWS_ACCESS_KEY_ID', credentialsId: 'awslogin', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'),
                    file(credentialsId: 'aws-keypair', variable: 'KEY_FILE_PATH') // Inject the Secret File
                ]) {
                    dir('terraformfiles') {
                        // 1. FIX: Use double quotes to resolve the variable interpolation/masking issue.
                        // This copies the key to the 'bookmyshow.pem' name, required by your main.tf.
                        sh "cp $KEY_FILE_PATH bookmyshow.pem" 

                        // 2. Set the necessary restrictive file permissions (600) for SSH to accept the key.
                        sh 'chmod 600 bookmyshow.pem'
                        
                        // 3. Execute Terraform steps. Now, the key is present and accessible.
                        sh 'terraform init'
                        sh 'terraform validate'
                        sh 'terraform apply --auto-approve'
                    }
                }
            }
        }
    }
}
